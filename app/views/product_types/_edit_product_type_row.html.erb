<%= form_for product_type do |f| %>
    <div class="well">
      <div class="row">
        <div class="col-xs-10">
          <%= label_tag 'Title' %>
          <%= f.text_field :title, value: product_type.title, placeholder: 'name' %>
        </div>
        <div class="col-xs-2 text-right">
          <div class="btn-group">
            <%= f.submit "Save", class: "btn btn-primary" %>
            <%= link_to 'Delete', product_type_path(id: product_type.id), { data: { confirm: "Are you sure you wish to delete the product type '#{product_type.title}'?" }, method: :delete, class: "btn btn-danger" } %>
          </div>
        </div>
      </div>
    </div>
<% end %>