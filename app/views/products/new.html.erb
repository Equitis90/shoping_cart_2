<%= form_for @product, { html: { :class => 'centered'} } do |f| %>
    <div class="well" style="width: 400px; margin: auto">
      <div class="row" style="padding: 5px">
        <%= label_tag 'Title', nil, :class => 'col-xs-4' %>
        <%= f.text_field :name, value: @product.name, placeholder: 'name', :class => 'col-xs-7' %>
      </div>
      <div class="row" style="padding: 5px">
        <%= label_tag 'Price', nil, :class => 'col-xs-4' %>
        <%= f.number_field :price, value: @product.price, placeholder: 'price', :class=> 'col-xs-7', :step => 0.01 %>
      </div>
      <div class="row" style="padding: 5px">
        <%= label_tag 'Product type', nil, :class => 'col-xs-4' %>
        <%= f.select :product_type_id, @product_types, {}, :class => 'col-xs-7' %>
      </div>
      <div class="row" style="padding: 5px">
        <%= label_tag 'Active', nil, :class => 'col-xs-4' %>
        <%= f.check_box :active %>
      </div>
      <div>
        <div class="btn-group">
          <%= f.submit "Save", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
<% end %>